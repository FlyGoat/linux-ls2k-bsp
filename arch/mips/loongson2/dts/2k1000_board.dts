/*
 * 2K1000 Device Tree Source for LS2K1000 boards
 */

/dts-v1/;
/ {
	model = "loongson,LS2k1000-EVP";
	compatible = "loongson,ls2k";
	#address-cells = <2>;
	#size-cells = <2>;

	// Since 2K1000 support > 4GiB DIMM, use 2 cell for and address size
	memory {
		name = "memory";
		device_type = "memory";
		reg =  <0 0x00200000 0 0x09800000	// 152MiB at 2MiB
			0 0x90000000 0 0x70000000>;	// 1792MiB at 2304MiB
	};

	// all soc device use 32bit address

	soc {
		compatible = "ls,nbus", "simple-bus";
		#address-cells = <1>;
		#size-cells = <1>;
		ranges = <0x10000000 0 0x10000000 0x10000000>;
		dma-coherent;

		icu: interrupt-controller@1fe11400 {
			compatible = "loongson,2k-icu";
			interrupt-controller;
			#interrupt-cells = <1>;
			reg = <0x1fe11400 0x40>;
		};

		dc@0x10290000 {
			compatible = "loongson,ls2k-fb";
			reg = <0x102a0000 0x10000>;
			interrupt-parent = <&icu>;
			interrupts = <28>;
		};

		ohci@0x102b0000 {
			compatible = "loongson,ls2k-ohci", "usb-ohci";
			reg = <0x102b0000 0x8000>;
			interrupt-parent = <&icu>;
			interrupts = <59>;
		};

		ehci@0x102b8000 {
			compatible = "loongson,ls2k-ehci", "usb-ehci";
			reg = <0x102b8000 0x8000>;
			interrupt-parent = <&icu>;
			interrupts = <58>;
		};

		otg@0x10240000 {
			compatible = "loongson,ls2k-otg", "usb-otg";
			reg = <0x10240000 0x10000>;
			interrupt-parent = <&icu>;
			interrupts = <57>;
		};

		ahci@0x10280000 {
			compatible = "snps,spear-ahci";
			reg = <0x10280000 0x10000>;
			interrupt-parent = <&icu>;
			interrupts = <27>;
		};

		ethernet@102c8000 {
			compatible = "snps,dwmac-3.70a", "ls,ls2k-gmac";
			reg = <0x102c8000 0x8000>;
			interrupt-parent = <&icu>;
			interrupts = <20 21>;
			interrupt-names = "macirq", "eth_wake_irq";
			/*mac-address = [ 64 48 48 48 48 60 ]; [>mac 64:48:48:48:48:60 <]*/
			phy-mode = "rgmii";
            bus_id = <0x0>;
            phy_addr = <0x0>;
		};

		ethernet@102c0000 {
			compatible = "snps,dwmac-3.70a", "ls,ls2k-gmac";
			reg = <0x102c0000 0x8000>;
			interrupt-parent = <&icu>;
			interrupts = <22 23>;
			interrupt-names = "macirq", "eth_wake_irq";
			/*mac-address = [ 64 48 48 48 48 61 ]; [>mac 64:48:48:48:48:61 <]*/
			phy-mode = "rgmii";
            bus_id = <0x1>;
            phy_addr = <0x10>;
		};

		serial0x@0x1fe00000{
			device_type = "serial";
			compatible = "ns16550";
			reg = <0x1fe00000 0x100>;
			clock-frequency = <125000000>;
			interrupt-parent = <&icu>;
			interrupts = <8>;
		};

		pioA:gpio@0x1fe10500{
			compatible = "ls,ls2k-gpio", "ls,ls-gpio";
			reg = <0x1fe10500 0x38>;
			ngpios = <64>;
			gpio-controller;
			#gpio-cells = <2>;
		};

		i2c0: i2c@0fe01000{
			compatible = "loongson,ls2k-i2c";
			reg = <0x1fe01000 0x8>;
			interrupt-parent = <&icu>;
			interrupts = <30>;
			#address-cells = <1>;
			#size-cells = <0>;
			rtc@68{
				compatible = "dallas,ds1338";
				reg = <0x68>;
			};
			eeprom@57{
				compatible = "atmel,24c16";
				reg = <0x57>;
				pagesize = <16>;
			};
		};
		i2c1: i2c@1fe01800{
			compatible = "loongson,ls2k-i2c";
			reg = <0x1fe01800 0x8>;
			interrupt-parent = <&icu>;
			interrupts = <31>;
		};

		i2c_dvo0:i2c@2{
			compatible = "i2c-gpio";
			gpios = <&pioA 1 0 /* sda */
				 &pioA 0 0 /* scl */
				>;
			/*i2c-gpio,sda-open-drain;*/
			/*i2c-gpio,scl-open-drain;*/
			i2c-gpio,delay-us = <5>;	/* ~100 kHz */
			#address-cells = <1>;
			#size-cells = <0>;
			eeprom@50{
				compatible = "dvi-eeprom-edid";
				reg = <0x50>;
			};
		};

		i2c_dvo1:i2c@3{
			compatible = "i2c-gpio";
			gpios = <&pioA 32 0 /* sda */
				 &pioA 33 0 /* scl */
				>;
			/*i2c-gpio,sda-open-drain;*/
			/*i2c-gpio,scl-open-drain;*/
			i2c-gpio,delay-us = <5>;	/* ~100 kHz */
		};

		spi0: spi@1fff0220{
			compatible = "loongson,ls2k-spi";
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0x1fff0220 0x6>;
			spidev@0{
				compatible = "rohm,dh2228fv";
				spi-max-frequency = <100000000>;
				reg = <0>;
			};
		};
		rtc0: rtc@1fe07800{
			compatible = "loongson,ls2k-rtc";
			reg = <0x1fe07800 0xff>;
			interrupt-parent = <&icu>;
			interrupts = <60>;
		};

		/* CAN controller nodes:
		 * If you want to use the "can" function,enable the "can"
		 * controller by configure general configuration register 0.
		 */
		/*can0: can@1fe00c00{
			compatible = "nxp,sja1000";
			reg = <0x1fe00c00 0xff>;
			interrupt-parent = <&icu>;
			interrupts = <24>;
		};
		can1: can@1fe00d00{
			compatible = "nxp,sja1000";
			reg = <0x1fe00d00 0xff>;
			interrupt-parent = <&icu>;
			interrupts = <25>;
		};*/

		pwm0: pwm@1fe02000{
		    compatible = "loongson,ls2k-pwm";
		    reg = <0x1fe02000 0xf>;
		    interrupt-parent = <&icu>;
		    interrupts = <32>;
		};
		pwm1: pwm@1fe02010{
			compatible = "loongson,ls2k-pwm";
			reg = <0x1fe02010 0xf>;
			interrupt-parent = <&icu>;
			interrupts = <33>;
		};
		pwm2: pwm@1fe02020{
			compatible = "loongson,ls2k-pwm";
			reg = <0x1fe02020 0xf>;
			interrupt-parent = <&icu>;
			interrupts = <34>;
		};
		pwm3: pwm@1fe02030{
			compatible = "loongson,ls2k-pwm";
			reg = <0x1fe02030 0xf>;
			interrupt-parent = <&icu>;
			interrupts = <35>;
		};
	};

	chosen {
		bootargs = "console=ttyS0,115200 root=/dev/sda1";
	};
};
